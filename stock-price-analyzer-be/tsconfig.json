{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "pretty": true,
    "types": [
      "jest",
      "node",
      "@types/jest"
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@dtos/*": [
        "dtos/*"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
    "src/controllers/core/group.controller ts",
    "src/server/sp/bascula.js",
    "src/server/sp/bascula.js",
    "src/server/sp/bascula.js",
    "cleanTables.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
